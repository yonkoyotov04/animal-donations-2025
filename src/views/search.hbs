        <main class="search">
            <!-- Search Page (Only for logged-in users) -->
            <section id="search">
                <h2>Search by Location</h2>

                <form class="search-wrapper cf" method="GET">
                    <input id="#search-input" type="text" name="location" placeholder="Search here..." value="{{filter.location}}" required />
                    <button type="submit">Search</button>
                </form>

                <div id="search-container">
                    <ul class="card-wrapper">
                        {{#each animals}}
                        <li class="card">
                            <img src="{{imageUrl}}"/>
                            <p>
                                <strong>Name: </strong><span class="name">{{name}}</span>
                            </p>
                            <p>
                                <strong>Location: </strong><span class="location">{{location}}</span>
                            </p>
                            <p><strong>Need of:</strong><span class="need-of">{{need}}</span></p>
                            <a class="details-btn" href="/animals/{{id}}/details">Details</a>
                        </li>
                        {{else}}
                        <div id="no-post">
                            <h2>There are no results found.</h2>
                        </div>
                        {{/each}}
                    </ul>

                
                    
                </div>
            </section>
        </main>