        <main class="dashboard">
            <section id="dashboard">
                <h2>Animals in Need</h2>
                <ul class="card-wrapper">
                    {{#each animals}}
                    <li class="card">
                        <img src="{{imageUrl}}"/>
                        <p>
                            <strong>Name: </strong><span class="name">{{name}}</span>
                        </p>
                        <p>
                            <strong>Location: </strong><span class="location">{{location}}</span>
                        </p>
                        <p><strong>Need of:</strong><span class="need-of">{{need}}</span></p>
                        <a class="details-btn" href="/animals/{{id}}/details">Details</a>
                    </li>
                    {{else}}
                        <div id="no-post">
                            <h2>There are no animals in need now! </h2>
                        </div>
                    {{/each}}
                </ul>
                
            </section>
        </main>